{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "build",
    "pretty": true,
    "module": "commonjs",
    "target": "es6",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "lib": [
      "ES2020.Promise"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]

}
